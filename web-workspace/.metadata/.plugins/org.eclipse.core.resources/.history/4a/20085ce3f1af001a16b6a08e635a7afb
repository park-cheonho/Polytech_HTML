	// pcNum[0]=answer[0] = s
	// pcNum[1]=answer[1] = s
	// pcNum[2]=answer[2] = s

	//

	// 3s-pcNum=answer 
	// 2s-
	// 1s2b-
	// 1s1b-
	// 1s-
	// 3b-
	// 2b- 
	// 1b-
	// out-
	 */
</script>
